:root {
  --main-font-color:white;
  --main-bg-color: black;
  --main-bg-crux: url(../images/backgrounds/background_crux.svg) ;
  --rafael-schueng-logo: url(../images/logos/personal\ logo.svg) ;
}

/*KEY FRAMES*/

@keyframes blink {
  0% {
     visibility: visible;
  }
  100% {
    visibility: hidden;
    
  }
}

@keyframes close-presentation-screen {
  0% {
    visibility: hidden;
  }
  100% {
    visibility: visible;
  }
}

body {
  overflow: hidden;
  background-color: var(--main-bg-color);
  font-family: 'Noto Sans', sans-serif;
  color:var(--main-font-color);
}

#main-screen {
  opacity: 0;
  background-image: var(--main-bg-crux);
  background-size: 15px;
  box-shadow: inset 0px 0px 100px 50px rgba(0,0,0,0.70);
  margin-top: 50px;
}

#logo-menu {
  width: 100vw;
}

#logo img {
  height: 50vh;
  width: 50vh;
}

#options ul {
  display: inline-flex;
  list-style: none;
  padding: 0;
  margin: 0;
}

#options ul li {
  margin:10px;
}

#options ul li a {
  color: var(--main-font-color);
  font-size: 1.5em;
  font-weight: bold;
}

#options ul li i {
  margin: 0 10px
}
#presentation-screen {
  display:block;
  opacity: 0;
}
#presentation-words h1 {
  display:none;
  font-size: 4em;

}
#presentation-words h1:nth-child(2){
  font-family: 'Fira Code', monospace;
}
#presentation-words h1:nth-child(3){
  font-family: 'Pacifico', cursive; 
}
#presentation-words h1:nth-child(4){
  font-family: 'Press Start 2P', cursive;
}
